<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:focusable="false"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <ScrollView
        android:layout_marginBottom="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="40dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Voucher Redeemption Successful!"
                    android:textAppearance="@style/headerTextStyle1"
                    android:textColor="@color/lytgreen"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:padding="4dp"
                android:layout_marginTop="10dp"
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Customer Name "
                        android:textAppearance="@style/headerTextStyle1"
                        android:textColor="@color/matt_black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=":"
                        android:textColor="@color/matt_black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/points_redeem_deduct"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="0dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textAppearance="@style/headerTextStyle1"
                        android:textColor="@color/matt_black"
                        android:textSize="15sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Customer ID"
                        android:textAppearance="@style/headerTextStyle1"
                        android:textColor="@color/matt_black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/matt_black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/points_redeem_customerID"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textAppearance="@style/headerTextStyle1"
                        android:textColor="@color/matt_black"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_ref_award"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Referral Award "
                        android:textAppearance="@style/headerTextStyle1"
                        android:textColor="@color/matt_black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/matt_black"
                        android:textSize="20sp" />

                    <TextView

                        android:id="@+id/points_redeem_award"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:padding="5dp"
                        android:textAppearance="@style/headerTextStyle1"
                        android:textColor="@color/matt_black"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/layout_status_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Status "
                        android:textAppearance="@style/headerTextStyle1"
                        android:textColor="@color/matt_black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/matt_black"
                        android:textSize="20sp" />

                    <TextView

                        android:id="@+id/tv_status_message"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:padding="5dp"
                        android:textAppearance="@style/headerTextStyle1"
                        android:textColor="@color/matt_black"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_cus_wallet_bal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Customer Wallet Bal "
                        android:textAppearance="@style/headerTextStyle1"
                        android:textColor="@color/matt_black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/matt_black"
                        android:textSize="20sp" />

                    <TextView

                        android:id="@+id/tv_cus_wallet_bal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:padding="5dp"
                        android:textAppearance="@style/headerTextStyle1"
                        android:textColor="@color/matt_black"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_wallet_balance_exp_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Wallet Bal Exp Date "
                        android:textAppearance="@style/headerTextStyle1"
                        android:textColor="@color/matt_black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/matt_black"
                        android:textSize="20sp" />

                    <TextView

                        android:id="@+id/tv_wallet_balance_exp_date"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:padding="5dp"
                        android:textAppearance="@style/headerTextStyle1"
                        android:textColor="@color/matt_black"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_redeem_deposit_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Redeem Deposit Amount"
                        android:textAppearance="@style/headerTextStyle1"
                        android:textColor="@color/matt_black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/matt_black"
                        android:textSize="20sp" />

                    <TextView

                        android:id="@+id/tv_redeem_deposit_amount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:padding="5dp"
                        android:textAppearance="@style/headerTextStyle1"
                        android:textColor="@color/matt_black"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_points_bal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Points Bal"
                        android:textAppearance="@style/headerTextStyle1"
                        android:textColor="@color/matt_black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/matt_black"
                        android:textSize="20sp" />

                    <TextView

                        android:id="@+id/tv_points_bal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:padding="5dp"
                        android:textAppearance="@style/headerTextStyle1"
                        android:textColor="@color/matt_black"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_points_exp_dt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Points Exp Date "
                        android:textAppearance="@style/headerTextStyle1"
                        android:textColor="@color/matt_black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/matt_black"
                        android:textSize="20sp" />

                    <TextView

                        android:id="@+id/tv_points_exp_dt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:padding="5dp"
                        android:textAppearance="@style/headerTextStyle1"
                        android:textColor="@color/matt_black"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_redeemMessage"
                android:layout_marginTop="20dp"
                android:layout_marginStart="@dimen/fifteen_dp"
                android:layout_marginEnd="@dimen/fifteen_dp"
                android:gravity="center"
                />


            <LinearLayout
                android:layout_marginTop="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="?attr/actionBarSize"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:text="Rate your experience"
                    android:textAppearance="@style/subHeaderTextStyle"
                    android:textColor="@color/lytgreen" />

                <hyogeun.github.com.colorratingbarlib.ColorRatingBar
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:numStars="5"
                    android:rating="3"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:textColor="@color/white"
                    app:changeable="true"
                    app:empty_color="@color/light_gray"
                    app:progress_color="@color/Gold" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/redeem_success_okay_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/btnGreen"
        android:gravity="center"
        android:padding="1dp"
        android:text="@string/okay"
        android:textAppearance="@style/textStyle"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
</FrameLayout>